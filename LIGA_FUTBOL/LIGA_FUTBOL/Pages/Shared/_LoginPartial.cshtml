@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {

        <a class="BTN BTNOk" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>


        <form  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="BTN BTNCancel">Logout</button>
        </form>

    }
    else
    {

        <a class="BTN BTNOk" asp-area="Identity" asp-page="/Account/Register">Register</a>


        <a class="BTN BTNOk2" asp-area="Identity" asp-page="/Account/Login">Login</a>

    }
</ul>
